{
    "sources": {
        "charcoal.instagram.tag": {
            "type": "database",
            "table": "charcoal_instagram_tags"
        }
    },
    "default_source": "charcoal.instagram.tag",

    "admin": {
        "lists": {
            "default": {
                "properties": [
                    "active",
                    "id"
                ],
                "list_actions": [],
                "properties_options": {
                    "active": {
                        "view_options": {
                            "attr": {
                                "width": "5%",
                                "class": "text-center"
                            }
                        }
                    },
                    "id": {
                        "view_options": {
                            "attr": {
                                "width": "90%"
                            }
                        }
                    }
                }
            }
        },
        "default_list": "default",

        "forms": {
            "default": {
                "groups": {
                    "infos": {
                        "priority": 1,
                        "title": "Information",
                        "show_header": false,
                        "layout": {
                            "structure": [
                                { "columns": [ 1, 3 ] }
                            ]
                        },
                        "properties": [
                            "active",
                            "id"
                        ]
                    }
                },
                "sidebars": {
                    "default": {}
                }
            }
        },

        "dashboards": {
            "admin.edit": {
                "widgets": {
                    "form.content": {
                        "priority": 10,
                        "type": "charcoal/admin/widget/objectForm",
                        "form_ident": "default",
                        "group_display_mode": "tab"
                    }
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                }
            },
            "admin.table": {
                "widgets": {
                    "list": {
                        "type": "charcoal/support/admin/widget/table",
                        "collection_ident": "default",
                        "data_sources": [ "request" ]
                    }
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                }
            }
        },
        "default_create_dashboard": "admin.edit",
        "default_edit_dashboard": "admin.edit",
        "default_collection_dashboard": "admin.table"
    }
}
