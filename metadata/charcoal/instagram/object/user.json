{
    "sources": {
        "charcoal.instagram.user": {
            "type": "database",
            "table": "charcoal_instagram_users"
        }
    },
    "default_source": "charcoal.instagram.user",

    "labels": {
        "menu_items": {
            "en": "Instagram Users",
            "fr": "Usagers Instagram"
        }
    },

    "properties": {
        "url": {
            "storable": false
        }
    },

    "admin": {
        "lists": {
            "default": {
                "properties": [
                    "active",
                    "avatar",
                    "handle",
                    "name"
                ],
                "list_actions": [],
                "properties_options": {
                    "active": {
                        "view_options": {
                            "attr": {
                                "width": "5%",
                                "class": "text-center"
                            }
                        }
                    },
                    "avatar": {
                        "view_options": {
                            "label": "Avatar",
                            "attr": {
                                "width": "5%",
                                "class": "text-center"
                            }
                        }
                    },
                    "handle": {
                        "view_options": {
                            "attr": {
                                "width": "45%"
                            }
                        }
                    },
                    "name": {
                        "view_options": {
                            "attr": {
                                "width": "45%"
                            }
                        }
                    }
                }
            }
        },
        "default_list": "default",

        "forms": {
            "default": {
                "groups": {
                    "infos": {
                        "priority": 1,
                        "title": "Information",
                        "show_header": false,
                        "layout": {
                            "structure": [
                                { "columns": [ 1, 3 ] },
                                { "columns": [ 1, 1 ] },
                                { "columns": [ 1 ] }
                            ]
                        },
                        "properties": [
                            "active",
                            "id",
                            "name",
                            "handle",
                            "avatar"
                        ]
                    }
                },
                "sidebars": {
                    "default": {}
                }
            }
        },

        "dashboards": {
            "admin.edit": {
                "widgets": {
                    "form.content": {
                        "priority": 10,
                        "type": "charcoal/admin/widget/objectForm",
                        "form_ident": "default",
                        "group_display_mode": "tab"
                    }
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                }
            },
            "admin.table": {
                "widgets": {
                    "list": {
                        "type": "charcoal/support/admin/widget/table",
                        "collection_ident": "default",
                        "data_sources": [ "request" ]
                    }
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                }
            }
        },
        "default_create_dashboard": "admin.edit",
        "default_edit_dashboard": "admin.edit",
        "default_collection_dashboard": "admin.table"
    }
}
