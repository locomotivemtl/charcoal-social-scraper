{
    "sources": {
        "charcoal.instagram.media": {
            "type": "database",
            "table": "charcoal_instagram_posts"
        }
    },
    "default_source": "charcoal.instagram.media",

    "labels": {
        "name": {
            "en": "Instagram Media",
            "fr": "Médias Instagram"
        },
        "singular_name": {
            "en": "Instagram Media",
            "fr": "Média Instagram"
        },
        "edit_item": {
            "en": "View Media",
            "fr": "Voir le média"
        },
        "edit_item": {
            "en": "Edit Media",
            "fr": "Modifier le média"
        },
        "all_items": {
            "en": "All Instagram Media",
            "fr": "Tous les médias Instagram"
        },
        "menu_items": {
            "en": "Instagram Media",
            "fr": "Médias Instagram"
        }
    },

    "properties": {
        "user": {
            "type": "object",
            "obj_type": "charcoal/instagram/object/user",
            "pattern": "handle",
            "multiple": false
        },
        "tags": {
            "type": "object",
            "input_type": "charcoal/admin/property/input/selectize/tags",
            "obj_type": "charcoal/instagram/object/tag",
            "pattern": "id"
        },
        "type": {
            "type": "string",
            "label": "Type"
        },
        "caption": {
            "type": "string",
            "label": {
                "fr": "Légende",
                "en": "Caption"
            }
        },
        "image": {
            "type": "image",
            "label": "Image"
        },
        "url": {
            "storable": false
        }
    },

    "admin": {
        "lists": {
            "default": {
                "properties": [
                    "active",
                    "created_date",
                    "caption",
                    "user",
                    "tags"
                ],
                "list_actions": [
                    {
                        "ident": "social-scraper-import",
                        "icon": "refresh is-spinnable",
                        "label": "Sync",
                        "button_type": "info",
                        "empty": true,
                        "url": "api/1/social-scraper/import/recent?scraper=instagram"
                    }
                ],
                "properties_options": {
                    "active": {
                        "view_options": {
                            "attr": {
                                "width": "5%",
                                "class": "text-center"
                            }
                        }
                    },
                    "created_date": {
                        "view_options": {
                            "attr": {
                                "width": "15%"
                            }
                        }
                    },
                    "caption": {
                        "view_options": {
                            "attr": {
                                "width": "55%"
                            },
                            "truncate": true
                        }
                    },
                    "user": {
                        "view_options": {
                            "attr": {
                                "width": "10%"
                            }
                        }
                    },
                    "tags": {
                        "view_options": {
                            "attr": {
                                "width": "10%"
                            },
                            "truncate": true
                        }
                    }
                }
            }
        },
        "default_list": "default",

        "forms": {
            "default": {
                "groups": {
                    "infos": {
                        "priority": 1,
                        "title": "Information",
                        "show_header": false,
                        "layout": {
                            "structure": [
                                { "columns": [ 1, 1, 1, 1 ] },
                                { "columns": [ 1 ] },
                                { "columns": [ 1 ] },
                                { "columns": [ 1, 1 ] }
                            ]
                        },
                        "properties": [
                            "active",
                            "id",
                            "created_date",
                            "user",
                            "tags",
                            "caption",
                            "image",
                            "type"
                        ]
                    }
                },
                "sidebars": {
                    "default": {}
                }
            }
        },

        "dashboards": {
            "admin.edit": {
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] },
                        { "columns": [ 1 ] },
                        { "columns": [ 1 ] },
                        { "columns": [ 1 ] }
                    ]
                },
                "widgets": {
                    "form.content": {
                        "priority": 10,
                        "type": "charcoal/admin/widget/objectForm",
                        "form_ident": "default",
                        "group_display_mode": "tab"
                    }
                }
            },
            "admin.table": {
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                },
                "widgets": {
                    "list": {
                        "type": "charcoal/support/admin/widget/table",
                        "template": "charcoal/social-scraper/admin/widget/table",
                        "collection_ident": "default",
                        "data_sources": [ "request" ]
                    }
                }
            }
        },
        "default_create_dashboard": "admin.edit",
        "default_edit_dashboard": "admin.edit",
        "default_collection_dashboard": "admin.table"
    }
}
