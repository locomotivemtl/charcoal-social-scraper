{
    "sources": {
        "charcoal.scrape.record": {
            "type": "database",
            "table": "charcoal_scrape_records"
        }
    },
    "default_source": "charcoal.scrape.record",

    "properties": {
        "id": {
            "type": "id",
            "mode": "uniqid"
        },
        "ident": {
            "type": "string",
            "readonly": true
        },
        "network": {
            "type": "string",
            "allow_null": false
        },
        "repository": {
            "type": "string",
            "allow_null": false
        },
        "method": {
            "type": "string",
            "allow_null": false
        },
        "filters": {
            "type": "structure",
            "allow_null": false
        },
        "status": {
            "type": "string",
            "multiple": {
                "separator": "|"
            },
            "label": {
                "en": "API Response Information",
                "fr": "Informations sur la réponse de l'API"
            }
        },
        "origin": {
            "type": "text",
            "label": {
                "en": "Origin",
                "fr": "Origine"
            },
            "description": {
                "en": "The location (e.g., URL) or the name of the program that triggered the scrape.",
                "fr": "L'emplacement (e.g., URL) ou le nom de l'application qui a exécutée le scrape."
            }
        },
        "log_date": {
            "type": "date-time",
            "readonly": true,
            "label": {
                "en": "Timestamp",
                "fr": "Horodatage"
            }
        }
    },

    "admin": {
        "lists": {
            "default": {
                "properties": [
                    "ident",
                    "log_date"
                ],
                "list_actions": [],
                "properties_options": {}
            }
        },
        "default_list": "default",

        "forms": {
            "default": {
                "groups": {
                    "infos": {
                        "priority": 1,
                        "title": "Information",
                        "show_header": false,
                        "layout": {
                            "structure": [
                                { "columns": [ 1, 1 ] },
                                { "columns": [ 1, 1 ] },
                                { "columns": [ 1, 1 ] }
                            ]
                        },
                        "properties": [
                            "log_date",
                            "ident",
                            "source",
                            "repository",
                            "method",
                            "filters"
                        ]
                    }
                },
                "sidebars": {
                    "default": {}
                }
            }
        },

        "dashboards": {
            "admin.edit": {
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] },
                        { "columns": [ 1 ] },
                        { "columns": [ 1 ] },
                        { "columns": [ 1 ] }
                    ]
                },
                "widgets": {
                    "form.content": {
                        "priority": 10,
                        "type": "charcoal/admin/widget/objectForm",
                        "form_ident": "default",
                        "obj_type": "charcoal/instagram/object/scrape-record",
                        "group_display_mode": "tab"
                    }
                },
                "sidemenu": {
                    "widget_options": {
                        "ident": "instagram"
                    }
                }
            },
            "admin.table": {
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                },
                "widgets": {
                    "list": {
                        "type": "charcoal/admin/widget/table",
                        "collection_ident": "default",
                        "obj_type": "charcoal/instagram/object/scrape-record",
                        "data_sources": [ "request" ]
                    }
                },
                "sidemenu": {
                    "widget_options": {
                        "ident": "instagram"
                    }
                }
            }
        },
        "default_create_dashboard": "admin.edit",
        "default_edit_dashboard": "admin.edit",
        "default_collection_dashboard": "admin.table"
    }
}
